<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/maker_register_progress"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ProgressBar
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/themecolor"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please wait"
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/baloo_bhai"
                android:text="Register"
                android:textColor="@color/themecolor"
                android:textSize="42dp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_background"
                app:boxStrokeColor="@color/themecolor">

                <EditText
                    android:id="@+id/maker_res_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="Restaurant name"
                    android:inputType="text"
                    android:textColor="@color/themecolor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_background"
                app:boxStrokeColor="@color/themecolor">

                <EditText
                    android:id="@+id/maker_email_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/themecolor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_background"
                app:boxStrokeColor="@color/themecolor">

                <EditText
                    android:id="@+id/maker_password_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/themecolor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_background"
                app:boxStrokeColor="@color/themecolor">

                <EditText
                    android:id="@+id/maker_confirm_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:textColor="@color/themecolor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_background"
                app:boxStrokeColor="@color/themecolor">

                <EditText
                    android:id="@+id/maker_register_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_background"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColor="@color/themecolor" />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/maker_register_btn"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/rount_btn"
                android:fontFamily="@font/baloo_bhai"
                android:text="Register restaurant "
                android:textAllCaps="false"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/maker_have_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/baloo_bhai"
                android:text="Already have account ? Login"
                android:textColor="@android:color/holo_blue_bright"
                android:textSize="18dp"
                android:textStyle="italic"/>
        </LinearLayout>
        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>