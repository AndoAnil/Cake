<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/RelLayOne1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp">

                    <ImageView
                        android:id="@+id/dialog_cake_image_buyer"
                        android:layout_width="200dp"
                        android:layout_height="180dp"
                        android:scaleType="center"
                        android:src="@color/themecolor" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/cake_type_name_dialog_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text=""
                    android:textColor="@color/themecolor"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/cake_weight_order_dialog_buyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text=""
                    android:textColor="@color/themecolor"
                    android:textSize="18dp" />

            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_below="@+id/RelLayOne1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RelLayTwo2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Info."
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/themecolor"
                android:textSize="24dp"
                android:id="@+id/restaurant_info"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/restaurant_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Name"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>

                    <TextView
                        android:id="@+id/restaurant_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/baloo_bhai"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:textSize="18dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Address"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/restaurant_address"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Email"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/restaurant_email"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/RelRestInfo"
            android:layout_below="@+id/RelLayTwo2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Info."
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/themecolor"
                android:textSize="24dp"
                android:id="@+id/order_info_buyer"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/order_info_buyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Type"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/cake_type_name_buyer"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Quantity"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/cake_quantity_dialog_buyer"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Weight"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/cake_weight_dialog_buyer"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Total ammount"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/cake_price_dialog_buyer"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/baloo_bhai"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>